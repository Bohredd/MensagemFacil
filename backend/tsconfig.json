{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "lib": ["ES6", "ES5"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true, // Habilita erros para qualquer tipo implícito 'any'
    "strictNullChecks": true, // Verifica nulls e undefined
    "strictPropertyInitialization": true, // Garante a inicialização de todas as propriedades

    /* Completeness */
    "skipLibCheck": true,

    /* Optional - Use these settings if you want more safety checks */
    "noImplicitReturns": true, // Erro se uma função não retornar explicitamente
    "noUnusedLocals": true, // Erro se houver variáveis não utilizadas
    "noFallthroughCasesInSwitch": true, // Erro se houver fallthrough em switch cases
    "noUnusedParameters": true, // Erro se houver parâmetros não utilizados
    "exactOptionalPropertyTypes": true, // Trata propriedades opcionais como opcionais, sem adicionar 'undefined'
    "noImplicitOverride": true // Força o uso de 'override' ao sobrescrever métodos
  },
  "include": ["src/**/*.ts"]
}
